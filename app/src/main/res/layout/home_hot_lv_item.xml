<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F8FAFA"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/color_solid"
            android:text="恋爱"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_text"/>

        <TextView
            android:textColor="#282828"
            android:text=" 标题"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/week_item_title"/>


        <TextView
            android:textColor="#282828"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全集 >"/>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/week_item_imageview"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#282828"
            android:text="第几话"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/week_item_below_title"/>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent" android:orientation="horizontal" >

            <ImageView
                android:clickable="true"
                android:id="@+id/week_item_image_zan"
                android:src="@drawable/zan_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#282828"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点赞数"
                android:id="@+id/week_item_zannum"/>

            <ImageView
                android:clickable="true"
                android:id="@+id/week_item_image_comment"
                android:src="@drawable/comment_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#282828"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论数"
                android:id="@+id/week_item_comment"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
